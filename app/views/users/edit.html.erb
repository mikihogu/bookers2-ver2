<div class="container my-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h3>User Info</h3>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, class: "form-control w-100" %>
        </div>
        <div class="form-group">
          <%= f.label :profile_image, "Image" %><br>
          <%= f.file_field :profile_image, accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, "Introduction" %>
          <%= f.text_area :introduction, class: "form-control w-100" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-sm btn-outline-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>