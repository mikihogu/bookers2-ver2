<h4>User Info</h4>
<%= image_tag user.get_profile_image, size: "120x120" %>
<table class="table">
  <tr>
    <th>name</th>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <th>introduction</th>
    <td><%= user.introduction %></td>
  </tr>
</table>
<div class="row">
  <% if user.id == current_user.id %>
    <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block mx-3 mb-5" do %>
      <i class="fas fa-user-edit"></i>
    <% end %>
  <% elsif user.id != current_user.id %>
    <%= link_to user_path(current_user), class: "btn btn-outline-secondary btn-block mx-3 mb-5" do %>
      <i class="fas fa-user-edit"></i>
    <% end %>
  <% end %>
</div>