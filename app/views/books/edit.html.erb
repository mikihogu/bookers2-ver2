<div class="container my-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <%= render 'layouts/error', obj: @book %>
      <h3>Editing Book</h3>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <%= f.label :title, "Title" %>
          <%= f.text_field :title, class: "form-control w-100" %>
        </div>
        <div class="form-group">
          <%= f.label :body, "Opinion" %>
          <%= f.text_area :body, class: "form-control w-100" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book", class: "btn btn-sm btn-outline-success" %>
        </div>
        <%= link_to "Show", book_path(@book) %> |
        <%= link_to "Back", books_path %>
      <% end %>
    </div>
  </div>
</div>