<div class="container my-5">
  <div class="row">
    <div class="col-4">
      <%= render 'users/info', user: @user %>
      <%= render 'form', book: @book %>
    </div>
    <div class="col-7 offset-1">
      <h2>Book Detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
                <%= image_tag @book.user.get_user_image, size: "80x80" %><br>
                <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.opinion %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>